@{
    ViewData["Title"] = "Registro Manual";
}

<div class="reg-wrap">

<!-- ═══ 1. RESUMEN DE ESTADO ═══ -->
<div class="summary-row">
    <div class="sm-card registrados">
        <div class="sm-ico registrados"><i class="bi bi-person-check-fill"></i></div>
        <div class="sm-info">
            <div class="sm-label">Registrados</div>
            <div class="sm-value">156</div>
        </div>
    </div>
    <div class="sm-card pendientes">
        <div class="sm-ico pendientes"><i class="bi bi-person-dash-fill"></i></div>
        <div class="sm-info">
            <div class="sm-label">Pendientes</div>
            <div class="sm-value">44</div>
        </div>
    </div>
    <div class="sm-card total">
        <div class="sm-ico total"><i class="bi bi-people-fill"></i></div>
        <div class="sm-info">
            <div class="sm-label">Total</div>
            <div class="sm-value">200</div>
        </div>
    </div>
    <div class="sm-card">
        <div class="sm-ico progreso"><i class="bi bi-graph-up"></i></div>
        <div class="sm-info">
            <div class="sm-label">Progreso</div>
            <div class="prog-mini">
                <div class="prog-mini-track"><div class="prog-mini-fill" style="width:78%"></div></div>
                <div class="prog-mini-pct">78%</div>
            </div>
        </div>
    </div>
</div>


@model SCA_MVC.ViewModels.EmpresaViewModel

@{
    ViewData["Title"] = "Empresas";
}

<div class="emp-wrap">

<!-- ═══ LAYOUT 2 COLUMNAS ═══ -->
<div class="emp-grid">

    <!-- ═══ COLUMNA IZQUIERDA — LISTA DE EMPRESAS ═══ -->
    <div class="emp-list-col">
        <div class="panel registro-section">
            <div class="registro-inner">
                <div class="emp-ph">
                    <h2><i class="bi bi-building"></i> Lista de Empresas</h2>
                    <div class="emp-ph-right">
                        <span class="emp-ph-count"><strong>@Model.Empresas.Count</strong> empresas</span>
                    </div>
                </div>
                <div class="emp-filter-row">
                    <form method="get" asp-action="Index" class="d-flex align-items-center gap-2 w-100">
                        <div class="rm-search">
                            <i class="bi bi-search"></i>
                            <input type="text" name="filtro" value="@Model.Filtro" placeholder="Buscar por nombre..."/>
                        </div>
                        <button type="submit" class="btn-nueva-emp"><i class="bi bi-search"></i> Buscar</button>
                    </form>
                    <a asp-action="Index" asp-route-nueva="true" class="btn-nueva-emp text-decoration-none"><i class="bi bi-plus-circle"></i> Nueva Empresa</a>
                </div>
                <div class="table-wrap">
                    <table class="reg-table">
                        <thead>
                            <tr>
                                <th style="width:40px">#</th>
                                <th>Nombre</th>
                                <th style="width:110px">Empleados</th>
                                <th style="width:100px">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Empresas.Any())
                            {
                                var i = 1;
                                foreach (var empresa in Model.Empresas)
                                {
                                    var selectedClass = empresa.IdEmpresa == Model.EmpresaSeleccionadaId ? "emp-row-selected" : "";
                                    <tr class="@selectedClass emp-row">
                                        <td class="td-num">
                                            <a asp-action="Index" asp-route-idEmpresa="@empresa.IdEmpresa" asp-route-filtro="@Model.Filtro" class="text-decoration-none text-reset d-block">@i</a>
                                        </td>
                                        <td>
                                            <a asp-action="Index" asp-route-idEmpresa="@empresa.IdEmpresa" asp-route-filtro="@Model.Filtro" class="text-decoration-none text-reset d-block">
                                                <div class="td-emp-cell"><div class="td-emp-ico"><i class="bi bi-building"></i></div><span class="td-empleado">@empresa.Nombre</span></div>
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Index" asp-route-idEmpresa="@empresa.IdEmpresa" asp-route-filtro="@Model.Filtro" class="text-decoration-none text-reset d-block">@empresa.CantidadEmpleados</a>
                                        </td>
                                        <td>
                                            <a asp-action="Index" asp-route-idEmpresa="@empresa.IdEmpresa" asp-route-filtro="@Model.Filtro" class="text-decoration-none text-reset d-block">
                                                <span class="emp-badge @(empresa.Estado ? "activo" : "inactivo")">@(empresa.Estado ? "Activo" : "Inactivo")</span>
                                            </a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">No hay empresas para mostrar.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ═══ COLUMNA DERECHA — FORMULARIO + ESTADÍSTICAS ═══ -->
    <div class="emp-detail-col">

        <!-- Formulario de Alta/Edición -->
        <div class="panel">
            <div class="config-row">
                <div class="cfg-title"><i class="bi bi-pencil-square"></i> Detalles de la Empresa</div>
            </div>
            <form asp-action="@(Model.EmpresaActual.IdEmpresa > 0 ? "Edit" : "Create")" method="post" class="emp-form" id="empresa-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="EmpresaActual.IdEmpresa" id="empresa-id" />
                <input type="hidden" asp-for="Filtro" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="emp-field">
                    <label asp-for="EmpresaActual.Nombre">Nombre</label>
                    <input asp-for="EmpresaActual.Nombre" id="empresa-nombre" placeholder="Nombre de la empresa"/>
                    <span asp-validation-for="EmpresaActual.Nombre" class="text-danger"></span>
                </div>
                <div class="emp-field">
                    <label>Estado</label>
                    <div class="emp-radios">
                        <label class="emp-radio">
                            <input asp-for="EmpresaActual.Estado" type="radio" value="true" id="empresa-estado-activo" />
                            <span class="emp-radio-mark activo"></span>
                            Activo
                        </label>
                        <label class="emp-radio">
                            <input asp-for="EmpresaActual.Estado" type="radio" value="false" id="empresa-estado-inactivo" />
                            <span class="emp-radio-mark inactivo"></span>
                            Inactivo
                        </label>
                    </div>
                </div>
                <div class="emp-actions">
                    <button type="submit" class="btn-srv btn-iniciar"><i class="bi bi-check-lg"></i> Guardar</button>
                    <a asp-action="Index" class="btn-emp-sec text-decoration-none d-inline-flex align-items-center"><i class="bi bi-x-lg"></i> Cancelar</a>
                    <button type="button" class="btn-emp-danger" id="btn-eliminar" @(Model.EmpresaActual.IdEmpresa <= 0 ? "disabled" : null)><i class="bi bi-trash3"></i> Eliminar</button>
                </div>
            </form>

            <form asp-action="Delete" method="post" id="delete-form" style="display:none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="idEmpresa" value="@Model.EmpresaActual.IdEmpresa" id="empresa-id-delete" />
            </form>
        </div>

        <!-- Estadísticas de la Empresa -->
        <div class="panel">
            <div class="config-row">
                <div class="cfg-title"><i class="bi bi-graph-up"></i> Estadísticas de la Empresa</div>
            </div>
            <div class="emp-stats">
                <div class="emp-stat-item">
                    <div class="emp-stat-ico"><i class="bi bi-people-fill"></i></div>
                    <div class="emp-stat-info">
                        <div class="emp-stat-label">Total Empleados</div>
                        <div class="emp-stat-value" id="stat-total-empleados">@Model.TotalEmpleados</div>
                    </div>
                </div>
                <div class="emp-stat-item">
                    <div class="emp-stat-ico inactivo"><i class="bi bi-person-dash-fill"></i></div>
                    <div class="emp-stat-info">
                        <div class="emp-stat-label">Inactivos</div>
                        <div class="emp-stat-value inactivo" id="stat-inactivos">@Model.Inactivos</div>
                    </div>
                </div>
                <div class="emp-stat-item">
                    <div class="emp-stat-ico asistencias"><i class="bi bi-calendar-check-fill"></i></div>
                    <div class="emp-stat-info">
                        <div class="emp-stat-label">Asistencias (Mes Actual)</div>
                        <div class="emp-stat-value" id="stat-asistencias">@Model.AsistenciasMesActual</div>
                    </div>
                </div>
                <div class="emp-stat-item">
                    <div class="emp-stat-ico promedio"><i class="bi bi-bar-chart-fill"></i></div>
                    <div class="emp-stat-info">
                        <div class="emp-stat-label">Promedio Diario</div>
                        <div class="emp-stat-value" id="stat-promedio">@Model.PromedioDiario</div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div> <!-- /emp-grid -->

</div> <!-- /emp-wrap -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

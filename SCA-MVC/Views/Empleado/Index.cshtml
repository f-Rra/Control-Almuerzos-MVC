    <!-- ═══ COLUMNA DERECHA — FORMULARIO ═══ -->
    <div class="emp-detail-col">

        <!-- Formulario de Alta/Edición -->
        <div class="panel">
            <div class="config-row">
                <div class="cfg-title"><i class="bi bi-person-vcard"></i> Detalles del Empleado</div>
            </div>
            <div class="emp-form">
                <div class="emp-field">
                    <label>Credencial RFID</label>
                    <div class="empl-cred-row">
                        <input type="text" value="RF001" placeholder="Ej: RF001"/>
                        <button class="btn-verificar"><i class="bi bi-check-circle"></i> Verificar</button>
                    </div>
                </div>
                <div class="emp-field">
                    <label>Nombre</label>
                    <input type="text" value="Juan" placeholder="Nombre del empleado"/>
                </div>
                <div class="emp-field">
                    <label>Apellido</label>
                    <input type="text" value="Pérez" placeholder="Apellido del empleado"/>
                </div>
                <div class="emp-field">
                    <label>Empresa</label>
                    <select class="emp-select-full">
                        <option selected>Administración</option>
                        <option>Gastronomía</option>
                        <option>Mantenimiento</option>
                        <option>Limpieza</option>
                        <option>Seguridad</option>
                        <option>Tecnología</option>
                        <option>Recursos Humanos</option>
                        <option>Logística</option>
                    </select>
                </div>
                <div class="emp-field">
                    <label>Estado</label>
                    <div class="emp-radios">
                        <label class="emp-radio">
                            <input type="radio" name="estado" value="1" checked/>
                            <span class="emp-radio-mark activo"></span>
                            Activo
                        </label>
                        <label class="emp-radio">
                            <input type="radio" name="estado" value="0"/>
                            <span class="emp-radio-mark inactivo"></span>
                            Inactivo
                        </label>
                    </div>
                </div>
                <div class="emp-actions">
                    <button class="btn-srv btn-iniciar"><i class="bi bi-check-lg"></i> Guardar</button>
                    <button class="btn-emp-sec"><i class="bi bi-x-lg"></i> Cancelar</button>
                    <button class="btn-emp-danger"><i class="bi bi-trash3"></i> Eliminar</button>
                </div>
            </div>
        </div>

    </div>


@model SCA_MVC.ViewModels.EmpleadoViewModel
@{
    ViewData["Title"] = "Empleados";
}

<div class="emp-wrap">

<!-- ═══ FILTROS SUPERIORES (formulario GET para búsqueda) ═══ -->
<form method="get" asp-action="Index" id="filtro-form">
    <input type="hidden" name="idEmpleado" value="@Model.EmpleadoSeleccionadoId" />
</form>

<!-- ═══ LAYOUT 2 COLUMNAS ═══ -->
<div class="emp-grid">

    <!-- ═══ COLUMNA IZQUIERDA — LISTA DE EMPLEADOS ═══ -->
    <div class="emp-list-col">
        <div class="panel registro-section">
            <div class="registro-inner">
                <div class="emp-ph">
                    <h2><i class="bi bi-people-fill"></i> Lista de Empleados</h2>
                    <div class="emp-ph-right">
                        <span class="emp-ph-count"><strong>@Model.Empleados.Count</strong> empleados</span>
                    </div>
                </div>
                <div class="emp-filter-row">
                    <div class="rm-search">
                        <i class="bi bi-search"></i>
                        <input type="text"
                               id="input-filtro"
                               placeholder="Buscar por nombre o credencial..."
                               value="@Model.Filtro"
                               form="filtro-form"
                               name="filtro" />
                    </div>
                    <div class="rm-filter">
                        <label>Empresa</label>
                        <select id="select-empresa"
                                form="filtro-form"
                                name="empresaFiltroId"
                                onchange="document.getElementById('filtro-form').submit()">
                            <option value="">Todas</option>
                            @foreach (var empresa in Model.Empresas)
                            {
                                <option value="@empresa.IdEmpresa"
                                        selected="@(Model.EmpresaFiltroId == empresa.IdEmpresa)">
                                    @empresa.Nombre
                                </option>
                            }
                        </select>
                    </div>
                    <a asp-action="Index" asp-route-nuevo="true" class="btn-nueva-emp">
                        <i class="bi bi-plus-circle"></i> Nuevo Empleado
                    </a>
                </div>
                <div class="table-wrap">
                    <table class="reg-table">
                        <thead>
                            <tr>
                                <th style="width:40px">#</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Empresa</th>
                                <th style="width:110px">Credencial</th>
                                <th style="width:100px">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Empleados.Any())
                            {
                                <tr>
                                    <td colspan="6" style="text-align:center; padding: 2rem; opacity:.6;">
                                        <i class="bi bi-inbox" style="font-size:1.5rem"></i><br />
                                        No se encontraron empleados@(Model.Filtro != null ? $" para \"{Model.Filtro}\"" : "")
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int num = 1;
                                foreach (var emp in Model.Empleados)
                                {
                                    var isSelected = emp.IdEmpleado == Model.EmpleadoSeleccionadoId;
                                    <tr class="@(isSelected ? "emp-row-selected" : "")"
                                        style="cursor:pointer"
                                        onclick="seleccionarEmpleado(@emp.IdEmpleado)">
                                        <td class="td-num">@num</td>
                                        <td>
                                            <div class="td-emp-cell">
                                                <div class="td-emp-ico"><i class="bi bi-person-fill"></i></div>
                                                <span class="td-empleado">@emp.Nombre</span>
                                            </div>
                                        </td>
                                        <td>@emp.Apellido</td>
                                        <td class="td-empresa">@(emp.Empresa?.Nombre ?? "-")</td>
                                        <td class="td-cred">@emp.IdCredencial</td>
                                        <td>
                                            <span class="emp-badge @(emp.Estado ? "activo" : "inactivo")">
                                                @(emp.Estado ? "Activo" : "Inactivo")
                                            </span>
                                        </td>
                                    </tr>
                                    num++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ═══ COLUMNA DERECHA — FORMULARIO ALTA / EDICIÓN ═══ -->
    <div class="emp-detail-col">
        <div class="panel">
            <div class="config-row">
                <div class="cfg-title">
                    <i class="bi bi-person-vcard"></i>
                    @(Model.EmpleadoActual.IdEmpleado > 0 ? "Editar Empleado" : "Nuevo Empleado")
                </div>
            </div>

            @* Mostrar errores de validación si los hay *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" style="margin: 0.75rem 1rem 0; border-radius: 8px;">
                    <asp-validation-summary asp-validation-type="All" />
                </div>
            }

            <div class="emp-form">

                @* Formulario de ALTA *@
                @if (Model.EmpleadoActual.IdEmpleado <= 0)
                {
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        @await Html.PartialAsync("_EmpleadoFormFields", Model)
                        <div class="emp-actions">
                            <button type="submit" class="btn-srv btn-iniciar">
                                <i class="bi bi-check-lg"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn-emp-sec">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                        </div>
                    </form>
                }
                else
                {
                    @* Form oculto de eliminación — el botón Desactivar lo submittea vía JS *@
                    <form asp-action="Delete" method="post" id="delete-empleado-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="idEmpleado" value="@Model.EmpleadoActual.IdEmpleado" />
                    </form>

                    @* Formulario de EDICIÓN con los 3 botones en la misma fila *@
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EmpleadoActual.IdEmpleado" />
                        @await Html.PartialAsync("_EmpleadoFormFields", Model)
                        <div class="emp-actions">
                            <button type="submit" class="btn-srv btn-iniciar">
                                <i class="bi bi-check-lg"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn-emp-sec">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                            <button type="button"
                                    id="btn-eliminar-empleado"
                                    class="btn-emp-danger"
                                    data-estado="@Model.EmpleadoActual.Estado.ToString().ToLower()">
                                <i class="bi bi-trash3"></i> Desactivar
                            </button>
                        </div>
                    </form>

                }

            </div>
        </div>
    </div>

</div> <!-- /emp-grid -->

</div> <!-- /emp-wrap -->

@model SCA_MVC.ViewModels.EmpleadoViewModel
@{
    ViewData["Title"] = "Empleados";
}

<div class="emp-wrap">

<!-- ═══ FILTROS SUPERIORES ═══ -->
<form method="get" asp-action="Index" id="filtro-form">
    <input type="hidden" name="idEmpleado" value="@Model.EmpleadoSeleccionadoId" />
</form>

<!-- ═══ LAYOUT 2 COLUMNAS ═══ -->
<div class="emp-grid">

    <!-- ═══ COLUMNA IZQUIERDA — LISTA DE EMPLEADOS ═══ -->
    <div class="emp-list-col">
        <div class="panel registro-section">
            <div class="registro-inner">
                <div class="emp-ph">
                    <h2><i class="bi bi-people-fill"></i> Lista de Empleados</h2>
                    <div class="emp-ph-right">
                        <span class="emp-ph-count"><strong>@Model.Empleados.Count</strong> empleados</span>
                    </div>
                </div>
                <div class="emp-filter-row">
                    <div class="rm-search">
                        <i class="bi bi-search"></i>
                        <input type="text"
                               id="input-filtro"
                               placeholder="Buscar por nombre o credencial..."
                               value="@Model.Filtro"
                               form="filtro-form"
                               name="filtro" />
                    </div>
                    <div class="rm-filter">
                        <label>Empresa</label>
                        <select id="select-empresa"
                                form="filtro-form"
                                name="empresaFiltroId"
                                onchange="document.getElementById('filtro-form').submit()">
                            <option value="">Todas</option>
                            @foreach (var empresa in Model.Empresas)
                            {
                                <option value="@empresa.IdEmpresa"
                                        selected="@(Model.EmpresaFiltroId == empresa.IdEmpresa)">
                                    @empresa.Nombre
                                </option>
                            }
                        </select>
                    </div>
                    <a asp-action="Index" asp-route-nuevo="true" class="btn-nueva-emp text-decoration-none">
                        <i class="bi bi-plus-circle"></i> Nuevo Empleado
                    </a>
                </div>
                <div class="table-wrap">
                    <table class="reg-table">
                        <thead>
                            <tr>
                                <th style="width:40px">#</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Empresa</th>
                                <th style="width:110px">Credencial</th>
                                <th style="width:100px">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Empleados.Any())
                            {
                                <tr>
                                    <td colspan="6" style="text-align:center; padding: 2rem; opacity:.6;">
                                        <i class="bi bi-inbox" style="font-size:1.5rem"></i><br />
                                        No se encontraron empleados@(Model.Filtro != null ? $" para \"{Model.Filtro}\"" : "")
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int num = 1;
                                foreach (var emp in Model.Empleados)
                                {
                                    var isSelected = emp.IdEmpleado == Model.EmpleadoSeleccionadoId;
                                    @* Cada fila es un link al mismo Index con el idEmpleado — igual que Empresa *@
                                    <tr class="@(isSelected ? "emp-row-selected" : "")">
                                        <td class="td-num">
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">@num</a>
                                        </td>
                                        <td>
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">
                                                <div class="td-emp-cell">
                                                    <div class="td-emp-ico"><i class="bi bi-person-fill"></i></div>
                                                    <span class="td-empleado">@emp.Nombre</span>
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">@emp.Apellido</a>
                                        </td>
                                        <td class="td-empresa">
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">@(emp.Empresa?.Nombre ?? "-")</a>
                                        </td>
                                        <td class="td-cred">
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">@emp.IdCredencial</a>
                                        </td>
                                        <td>
                                            <a asp-action="Index"
                                               asp-route-idEmpleado="@emp.IdEmpleado"
                                               asp-route-filtro="@Model.Filtro"
                                               asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                                               class="text-decoration-none text-reset d-block">
                                                <span class="emp-badge @(emp.Estado ? "activo" : "inactivo")">
                                                    @(emp.Estado ? "Activo" : "Inactivo")
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                    num++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ═══ COLUMNA DERECHA — FORMULARIO ALTA / EDICIÓN ═══ -->
    <div class="emp-detail-col">
        <div class="panel">
            <div class="config-row">
                <div class="cfg-title">
                    <i class="bi bi-person-vcard"></i>
                    @(Model.EmpleadoActual.IdEmpleado > 0 ? "Editar Empleado" : "Nuevo Empleado")
                </div>
            </div>

            @* Errores de validación *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" style="margin: 0.75rem 1rem 0; border-radius: 8px;">
                    <asp-validation-summary asp-validation-type="All" />
                </div>
            }

            <div class="emp-form">

                @* Form oculto de eliminación *@
                <form asp-action="Delete" method="post" id="delete-empleado-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="idEmpleado" value="@Model.EmpleadoActual.IdEmpleado" id="empresa-id-delete" />
                </form>

                @* Formulario unificado Alta / Edición *@
                <form asp-action="@(Model.EmpleadoActual.IdEmpleado > 0 ? "Edit" : "Create")"
                      method="post"
                      id="empleado-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="EmpleadoActual.IdEmpleado" />

                    @await Html.PartialAsync("_EmpleadoFormFields", Model)

                    <div class="emp-actions">
                        <button type="submit" class="btn-srv btn-iniciar">
                            <i class="bi bi-check-lg"></i> Guardar
                        </button>
                        <a asp-action="Index"
                           asp-route-filtro="@Model.Filtro"
                           asp-route-empresaFiltroId="@Model.EmpresaFiltroId"
                           class="btn-emp-sec">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                        <button type="button"
                                id="btn-eliminar-empleado"
                                class="btn-emp-danger"
                                @(Model.EmpleadoActual.IdEmpleado <= 0 ? "disabled" : null)
                                data-estado="@Model.EmpleadoActual.Estado.ToString().ToLower()">
                            <i class="bi bi-trash3"></i> Desactivar
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div> <!-- /emp-grid -->

</div> <!-- /emp-wrap -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // ── Búsqueda con debounce ──────────────────────────────────
        (function () {
            const inputFiltro = document.getElementById("input-filtro");
            if (!inputFiltro) return;
            let timer;
            inputFiltro.addEventListener("input", () => {
                clearTimeout(timer);
                timer = setTimeout(() => document.getElementById("filtro-form").submit(), 400);
            });
            inputFiltro.addEventListener("keydown", e => { if (e.key === "Enter") e.preventDefault(); });
        })();

        // ── Enter en credencial → verificar, no submitear ──────────
        (function () {
            const input = document.getElementById("input-credencial");
            if (!input) return;
            input.addEventListener("keydown", e => { if (e.key === "Enter") { e.preventDefault(); verificarCredencial(); } });
        })();

        // ── Verificación RFID (AJAX → /Empleado/VerificarCredencial) ─
        async function verificarCredencial() {
            const inputCred = document.getElementById("input-credencial");
            const statusEl  = document.getElementById("credencial-status");
            if (!inputCred || !statusEl) return;

            const cred = inputCred.value.trim().toUpperCase();
            if (!cred) {
                statusEl.textContent = "Ingresá una credencial para verificar.";
                statusEl.style.color = "#f59e0b";
                inputCred.style.borderColor = "";
                return;
            }

            const idActual = document.getElementById("hidden-id-empleado-actual")?.value ?? "0";
            try {
                const r = await fetch(`/Empleado/VerificarCredencial?credencial=${encodeURIComponent(cred)}&idEmpleadoActual=${idActual}`);
                const d = await r.json();
                if (d.estado === "disponible") {
                    statusEl.textContent = `✓ La credencial '${cred}' está disponible.`;
                    statusEl.style.color = "#22c55e";
                    inputCred.style.borderColor = "#22c55e";
                } else if (d.estado === "propia") {
                    statusEl.textContent = `ℹ '${cred}' es la credencial actual de este empleado.`;
                    statusEl.style.color = "#2196F3";
                    inputCred.style.borderColor = "#2196F3";
                } else {
                    statusEl.textContent = `⚠ La credencial '${cred}' ya está asignada a otro empleado.`;
                    statusEl.style.color = "#ef4444";
                    inputCred.style.borderColor = "#ef4444";
                }
            } catch {
                statusEl.textContent = "Error al verificar. Intentá de nuevo.";
                statusEl.style.color = "#ef4444";
            }
        }

        // ── Confirmación de desactivación (usa showConfirm de site.js) ─
        (function () {
            const btn  = document.getElementById("btn-eliminar-empleado");
            const form = document.getElementById("delete-empleado-form");
            if (!btn || !form) return;
            btn.addEventListener("click", () => {
                if (btn.dataset.estado === "false") {
                    showMessage("warning", "Ya desactivado", "El empleado ya se encuentra desactivado.");
                    return;
                }
                showConfirm(
                    "¿Estás seguro que deseas desactivar al empleado seleccionado?",
                    "Confirmar desactivación",
                    () => form.submit()
                );
            });
        })();
    </script>
}

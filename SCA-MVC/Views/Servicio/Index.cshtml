@{
    ViewData["Title"] = "Servicio";
}

<div class="srv-wrap">

<!-- ═══ 1. CONFIGURACIÓN DEL SERVICIO ═══ -->
<div class="panel">
    <div class="config-row">
        <div class="cfg-title"><i class="bi bi-gear-fill"></i> Configuración del Servicio</div>
        <div class="cfg-sep"></div>
        <div class="cfg-inputs">
            <div class="cfg-item"><label>Lugar</label><select><option>Comedor</option><option>Quincho</option></select></div>
            <div class="cfg-item"><label>Fecha</label><input type="date" value="2026-02-09"/></div>
            <div class="cfg-item"><label>Proyección</label><input type="number" value="200" min="0"/></div>
            <div class="cfg-item"><label>Invitados</label><input type="number" value="15" min="0"/></div>
        </div>
        <div class="cfg-sep"></div>
        <div class="cfg-btn-wrap">
            <button class="btn-srv btn-iniciar"><i class="bi bi-play-fill"></i> Iniciar Servicio</button>
        </div>
    </div>
</div>

<!-- ═══ 2. BARRA DE ESTADO ═══ -->
<div class="status-bar">
    <div class="st-card">
        <i class="bi bi-power ico-lg" style="color:var(--green)"></i>
        <div class="st-label">Estado</div>
        <div class="st-value activo"><span class="st-dot on"></span> ACTIVO</div>
    </div>
    <div class="st-card">
        <i class="bi bi-stopwatch ico-lg"></i>
        <div class="st-label">Duración</div>
        <div class="st-crono">01:23:45</div>
    </div>
    <div class="st-card">
        <i class="bi bi-graph-up ico-lg" style="color:#42A5F5"></i>
        <div class="st-label">Progreso</div>
        <div class="prog-row"><div class="prog-track"><div class="prog-fill" style="width:78%"></div></div><div class="prog-pct">78%</div></div>
    </div>
    <div class="st-card">
        <i class="bi bi-person-check ico-lg" style="color:var(--green)"></i>
        <div class="st-label">Registrados</div>
        <div class="st-big">156</div>
    </div>
    <div class="st-card">
        <i class="bi bi-person-dash ico-lg" style="color:var(--red)"></i>
        <div class="st-label">Faltan</div>
        <div class="st-big">44</div>
